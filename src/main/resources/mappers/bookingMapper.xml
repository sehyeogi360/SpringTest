<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  	<mapper namespace="com.marondal.spring.test.ajax.dao.BookingDAO">
  	
  	<select id="selectBookingList" resultType="com.marondal.spring.test.ajax.model.Booking">
  		SELECT 
  			`id`
  			, `name`
  			, `headcount`
  			, `day`
  			, `date`
  			, `phoneNumber`
  			, `state`
  			, `createdAt`
  			, `updatedAt`
  		FROM 
  			`booking`;
  	</select>
  	
  	<insert id="insertBookingList" parameterType="map">
  		INSERT INTO 
  				`booking`
			(
			`name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
			)
			VALUE
			(
			, #{name}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, #{state}
			, now()
			, now()
		)
  	</insert>
  	
  	
  	<delete id="deleteBookingList" parameterType="int">
  		DELETE 
  		FROM 
  			`booking`
		WHERE 
			`id`= #{id};
  	</delete>
  	
  	
  	</mapper>