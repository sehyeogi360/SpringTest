<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.marondal.spring.test.ajax.dao.FavoriteDAO">
	
	<select id="selectFavoriteList" resultType="com.marondal.spring.test.ajax.model.Favorite">
		SELECT 
				`id`
				,`name`
				,`url`
				,`createdAt`
				,`updatedAt`		 
		
		FROM `site`;

	</select>
	
	<insert id="insertFavorite" parameterType="com.marondal.spring.test.ajax.model.Favorite">
		INSERT INTO 
					`site`
			(
				 `name`
				, `url`
				, `createdAt`
				, `updatedAt`
			)
			VALUE
			(
			
			 #{name}
			, #{url}
			, now()
			, now()
		)
	
	</insert>
	
	</mapper>
  